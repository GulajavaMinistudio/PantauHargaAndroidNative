                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.NOLAUNCHER"/>
            </intent-filter>
        </activity>



        <meta-data
            android:name="com.bumptech.glide.integration.okhttp.OkHttpGlideModule"
