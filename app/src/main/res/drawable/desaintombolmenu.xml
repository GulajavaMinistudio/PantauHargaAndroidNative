<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- KETIKA TOMBOL DITEKAN -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/transparan"/>
            <solid android:color="@color/hijautombolgelap1"/>
            <corners android:radius="3dp"/>
            <padding android:left="@dimen/paddingtombol" android:top="@dimen/paddingtombol" android:bottom="@dimen/paddingtombol" android:right="@dimen/paddingtombol"/>
        </shape>
    </item>


    <!-- KETIKA TOMBOL FOKUS -->
    <item android:state_focused="true">
        <shape>
            <stroke android:width="0dp" android:color="@color/transparan"/>
            <solid android:color="@color/hijautombolgelap2"/>
            <corners android:radius="3dp"/>
            <padding android:left="@dimen/paddingtombol" android:top="@dimen/paddingtombol" android:bottom="@dimen/paddingtombol" android:right="@dimen/paddingtombol"/>
        </shape>
    </item>


    <!-- KETIKA TOMBOL TIDAK DIAPA-APAKAN -->
    <item>
        <shape>
            <stroke android:width="0dp" android:color="@color/transparan"/>
            <solid android:color="@color/hijautombolgelap2"/>
            <corners android:radius="3dp"/>
            <padding android:left="@dimen/paddingtombol" android:top="@dimen/paddingtombol" android:bottom="@dimen/paddingtombol" android:right="@dimen/paddingtombol"/>
        </shape>
    </item>


</selector>
