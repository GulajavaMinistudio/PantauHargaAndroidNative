<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:keepScreenOn="true"
              android:orientation="vertical">


    <include layout="@layout/toolbars"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/lapor_keterangan"
                android:textColor="@color/warnatekssubjudul"
                android:textSize="@dimen/ukuran16sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_namakomoditas"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lapor_jeniskomoditas"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/ukuran16sp"/>


                    <Spinner
                        android:id="@+id/spin_namakomoditas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:spinnerMode="dropdown"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_harga"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lapor_harga"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/ukuran16sp"/>


                    <EditText
                        android:id="@+id/edit_harga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lapor_hargahint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:textSize="@dimen/ukuran16sp"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_jumlahkomoditas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_jumlahkomod"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lapor_kuantitas"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/ukuran16sp"/>


                    <EditText
                        android:id="@+id/edit_jumlahkomoditas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/lapor_kuantitashint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:textSize="@dimen/ukuran16sp"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_lokasipeta"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lapor_koordinat"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/ukuran16sp"/>


                    <EditText
                        android:id="@+id/edit_koordinatlokasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="100"
                        android:maxLines="3"
                        android:textSize="@dimen/ukuran16sp"
                        />


                </LinearLayout>


                <ImageButton
                    android:id="@+id/tombol_setelpeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/desaintombolmenutransparan"
                    android:src="@drawable/ic_action_setelpeta"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_tombolkirimdraft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/abubayangan"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/tombol_kirim"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="145dp"
                        android:layout_height="42dp"
                        android:background="@drawable/desaintombolmenu"
                        android:text="@string/lapor_kirimdata"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/ukuran14sp"
                        android:textStyle="bold"/>


                    <Button
                        android:id="@+id/tombol_simpandraft"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="145dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/desaintombolmenudaftar"
                        android:text="@string/lapor_simpandata"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/ukuran14sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="26dp"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>